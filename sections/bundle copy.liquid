{% endif %}

{% if section.settings.product_select != blank %}
<div class="container">
  <div class="itemsinner">
    <div class="items"> <img src="" alt=""></div>
    <div class="items"> <img src="" alt=""></div>
    <div class="items"><img src="" alt=""></div>
    <div class="items"><img src="" alt=""></div>
    <div class="items"><img src="" alt=""></div>
  </div>
</div>
{% endif %}

   <script>
  document.addEventListener('DOMContentLoaded', function () {
    const slider = document.querySelector('.slider');
    let cardWidth = document.querySelector('.card').offsetWidth;
    let currentIndex = 0;

    function updateSlider() {
        slider.style.transform = `translateX(${-currentIndex * cardWidth}px)`;
    }

    document.querySelector('.next').addEventListener('click', function () {
        currentIndex = (currentIndex + 1) % (slider.children.length - 1);
        updateSlider();
    });

    document.querySelector('.prev').addEventListener('click', function () {
        currentIndex = (currentIndex - 1 + (slider.children.length - 1)) % (slider.children.length - 1);
        updateSlider();
    });

    window.addEventListener('resize', function () {
        cardWidth = document.querySelector('.card').offsetWidth;
        updateSlider();
    });
});

   </script> 

  


 
